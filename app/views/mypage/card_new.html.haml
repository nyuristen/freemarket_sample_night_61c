
= render partial: "shared/header"
.main
  .mypage-main-content
    = render 'mypages/modules/mypage-sidebar'
    .card-input-contents
      %h2
        クレジットカード情報入力
      = form_with id: "charge-form", url: "/card", method: :post, local: true do |f|
        .card-input-content
          .form-group
            %label
              カード番号
              %span
                必須
            = f.text_field :number, class: "input-default",  placeholder: "半角英数のみ",id: "number"
            %ul
              %li 
                =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2482339763", size: "49x20",alt:"visa"
              %li 
                =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2482339763", size: "34x20",alt:"master-card"
              %li 
                =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2482339763", size: "30x20",alt:"saison-card"
              %li 
                =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2482339763", size: "32x20",alt:"jcb"
              %li 
                =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2482339763", size: "21x20",alt:"american_express"
              %li 
                =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2482339763", size: "32x20",alt:"dinersclub"
              %li 
                =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2482339763", size: "32x20",alt:"discover"
          .form-group
            %label
              有効期限
              %span
                必須
            .select-wrap
              .select-wrap-half
                = f.select :exp_month,[["01"], ["02"], ["03"], ["04"], ["05"], ["06"], ["07"], ["08"], ["09"], ["10"], ["11"], ["12"]],id:"exp_month"
                %i.fa.fa-angle-down
                %span
                  月
              .select-wrap-half
                = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],id: "exp_year"
                %i.fa.fa-angle-down
                %span
                  年
          .form-group
            %label
              セキュリティーコード
              %span
                必須
            = f.text_field :cvc, class: "cvc input-default",  placeholder: "カード背面4桁もしくは3桁の番号",id:"cvc"
            .signup-seqcode
              .signup-seqcode-text
                ?
              %span
                カード背面の番号とは？
          = f.submit "追加する", class:"add-btn",id: "token_submit", type: "submit"
= render "shared/sell-btn"
= render "shared/footer"