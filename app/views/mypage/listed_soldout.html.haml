= render "shared/header"
- breadcrumb :mypage
= render partial: "shared/breadcrumbs"
.mypage-main-content
  = render 'mypage/modules/mypage-sidebar'
  .items-wrapper
    = render "layouts/notifications"
    .title
      %h2 売却済商品一覧
    .items
      - if @gifts.where(listing_state: 2).blank?
        .items__item
          売却済商品はありません
      - else
        - @gifts.where(listing_state: 2).first(10).each do |gift|
          = render partial: 'mypage/modules/mypage-listed-items', locals: { gift: gift }
= render 'shared/footer'