= render 'shared/header'
-# - breadcrumb :purchase_done
-# = render "layouts/breadcrumbs"
.purchase-main
  .purchase-wrapper
    .purchase__title
      %h2 購入が完了しました
    .purchase__details
      .labels-wrapper
        .label 商品名
        .before-input= "#{@gift.name}"
        %br
        .label 商品価格
        .before-input= "¥#{@gift.price}(送料込み)"
    %br
    .purchase__payment
      .labels-wrapper
        .label 支払い方法
        .before-input
          クレジットカード
        - if @default_card_information.present?
          %label
            番号(下4桁)　：
          %label= "**** **** **** " + @default_card_information.last4
          %br
          %label 月 / 年　：
          - exp_month = @default_card_information.exp_month.to_s
          - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
          %label= exp_month + " / " + exp_year
    .form-buttons
      .buttons
        = link_to "ホームに戻る", :root, class: "submit"
= render 'shared/footer'